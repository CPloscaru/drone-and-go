<div class="row">
  <%= simple_form_for(@booking, method: :post, url:drone_bookings_path(@drone)) do |f| %>
  <div class="col">
    <%= f.input :starting_date,  as: :string, input_html: { data: {controller: "datepicker", totalprice_target: "startingdate", action: "change->totalprice#startingdate", datepicker_min_date: Time.zone.now} } %>
    <%= f.input :ending_date,  as: :string, input_html: { data: {controller: "datepicker", totalprice_target: "endingdate", action: "change->totalprice#endingdate", datepicker_min_date: Time.zone.now} } %>
  </div>
  <div class="col">
    <div class="row row-cols-lg-auto justify-content-between align-items-center m-3">
      <%= f.submit "Book Now", class:"btn btn-outline-success" %>
      <div class="total">Total: <span data-totalprice-target="total"> - </span>â‚¬</div>
    </div>
  </div>
  <% end %>
</div>
