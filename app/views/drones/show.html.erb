
<div class="container">
  <div class="row justify-content-center">

    <div class="col-8">
      <div class="card" >
        <%= image_tag "drone.png" %>
        <div class="card-body">
          <h5 class="card-title">Drone Name : <%= @drone.name %></h5>
          <p class="card-text">Description : <%= @drone.description %></p>
        </div>
      </div>
