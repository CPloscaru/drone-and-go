
<div class="container">
  <div class="row justify-content-center">

    <div class="col-8">
      <div class="card" >
        <%= image_tag "drone.png" %>
        <div class="card-body">
          <h5 class="card-title">Drone Name : <%= @drone.name %></h5>
          <p class="card-text">Description : <%= @drone.description %></p>
        </div>
      </div>
    </div>

    <div class="col-4">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <div style="text-align: center;">
              <h5 class="card-title">Price per day: <%= @drone.price_per_day  %>€</h5>

            </div>
          </div>

          <div class="card-body">
            <ul>
              <li style="text-align: left">Autonomy: <%=(@drone.flight_time)%>
              </li>
            </ul>
          </div>

          <div class="card-body">
            <ul>
              <li style="text-align: left">Max Altitude: <%=(@drone.max_altitude)%>
              </li>
            </ul>
          </div>

          <div class="card-body">
            <ul>
              <li style="text-align: left">Wind Resistance: <%=(@drone.max_wind_resistance)%>
              </li>
            </ul>
          </div>

          <div class="card-body">
            <ul>
              <li style="text-align: left">Flight Distance: <%=(@drone.max_flight_distance)%>
              </li>
            </ul>
          </div>

          <div class="card-body">
            <ul>
              <li style="text-align: left">Resolution <%=(@drone.max_resolution)%>
              </li>
            </ul>
          </div>

          </div>
        </div>


      <div class="col-12">
        <div class="card" >
          <div class="card-header">
            <h5>Réservation</h5>
            <!-- CALENDRIER -->
            <%= render "bookings/form" %>

         </div>
        </div>
      </div>
    </div>
    </div>

    <!-- Carte loc -->

  </div>
</div>
