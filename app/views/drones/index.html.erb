<!-- Logo -->
<div class="index-container">
  <div class="video-container">
      <video id="background-video" autoplay loop muted>
          <source src="https://res.cloudinary.com/dszwbrhu1/video/upload/v1741289829/Design_sans_titre_tli8rx.mp4" type="video/mp4">
      </video>
    <!-- NavBar -->
    <div class="text-container">
      <span class="line line1">Live your dream.</span>
      <span class="line line2">Capture your journey.</span>
    </div>
  </div>

  <div style="height: 20px;"></div>

  <div class="container">


    <div class="row">

    <!-- Buttons -->
      <div class="col-12 mt-3 mb-5">
        <%= link_to "Flight Time #{params[:sort_by] == 'flight_time' && params[:order] == 'asc' ? '⬇' : '⬆'}", drones_path(sort_by: "flight_time", order: params[:order] == "asc" ? "desc" : "asc"), class: "btn btn-outline-primary btn-lg", role: "button", "aria-pressed": "true", id: "flight_time_button" %>
        <%= link_to "Max Altitude #{params[:sort_by] == 'max_altitude' && params[:order] == 'asc' ? '⬇' : '⬆'}", drones_path(sort_by: "max_altitude", order: params[:order] == "asc" ? "desc" : "asc"), class: "btn btn-outline-primary btn-lg", role: "button", "aria-pressed": "true", id: "max_altitude_button" %>
        <%= link_to "Max Wind Resistance #{params[:sort_by] == 'max_wind_resistance' && params[:order] == 'asc' ? '⬇' : '⬆'}", drones_path(sort_by: "max_wind_resistance", order: params[:order] == "asc" ? "desc" : "asc"), class: "btn btn-outline-primary btn-lg", role: "button", "aria-pressed": "true", id: "max_wind_resistance_button" %>
        <%= link_to "Max Resolution Button #{params[:sort_by] == 'max_resolution' && params[:order] == 'asc' ? '⬇' : '⬆'}", drones_path(sort_by: "max_resolution", order: params[:order] == "asc" ? "desc" : "asc"), class: "btn btn-outline-primary btn-lg ", role: "button", "aria-pressed": "true", id: "max_resolution_button" %>
        <%= link_to "Max Flight Distance #{params[:sort_by] == 'max_flight_distance' && params[:order] == 'asc' ? '⬇' : '⬆'}", drones_path(sort_by: "max_flight_distance", order: params[:order] == "asc" ? "desc" : "asc"), class: "btn btn-outline-primary btn-lg ", role: "button", "aria-pressed": "true", id: "max_flight_distance" %><!-- filtrer prix croissant -->
        <%= link_to "Price per Day #{params[:sort_by] == 'price_per_day' && params[:order] == 'desc' ? '⬆' : '⬇'}", drones_path(sort_by: "price_per_day", order: params[:order] == "asc" ? "desc" : "asc"), class: "btn btn-outline-primary btn-lg ", role: "button", "aria-pressed": "true", id: "price_per_day_button" %>
      </div>

      <%# <div class="col-12 mt-3 mb-5 mx-3">
        <%# <%= render "slider", maximum: @price_per_day_max, median:@price_per_day_median %>
      <%# </div>  %>
    <!-- Espacement -->

    <div class="cards">
      <% @drones.each do |drone| %>
        <%= render "drone", drone: drone %>
      <% end %>
    </div>

    </div>
  </div>
</div>
